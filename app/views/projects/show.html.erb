<% content_for :title, "Showing project" %>

<div class="md:w-2/3 w-full">

  <h1 class="font-bold text-2xl">Showing project</h1>

  <%= render @project %>

  <%= link_to "Back to projects", projects_path, class: "btn-secondary" %>
  <%= button_to "Remove this project", project_path(@project), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "btn-danger", data: { turbo_confirm: "Are you sure?" } %>
</div>
