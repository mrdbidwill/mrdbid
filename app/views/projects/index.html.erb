<% content_for :title, "Projects" %>

<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Projects</h1>
    <%= link_to "New project", new_project_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="projects" class="min-w-full divide-y divide-gray-100 space-y-5">
    <p class="mt-3 text-lg leading-relaxed">You create projects to use however you see fit.</p>
    <p class="mt-3 text-lg leading-relaxed">Projects are different from Groups and Clusters in that your project, and all others, are available to you <b>and others.</b> Any registered user can join your projects and vice versa.</p>
    <% if @projects.any? %>
      <% @projects.each do |project| %>
        <div class="flex flex-col sm:flex-row border border-green-600  justify-between items-center pb-5 sm:pb-0">
          <%= render project %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-1">
            <%= link_to "Show", project_path(project), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
            <%= link_to "Edit", edit_project_path(project), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
            <%= button_to "Delete", project_path(project), method: :delete, class: "w-full sm:w-auto rounded-md px-2 py-1 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No projects found.</p>
    <% end %>
  </div>
</div>
