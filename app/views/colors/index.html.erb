<% content_for :title, "Colors" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Colors</h1>
    <%= link_to "New color", new_color_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="colors" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @colors.any? %>
      <% @colors.each do |color| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <img src="<%= color.image_file %>" alt="<%= color.latin_name %>" />
          <p><strong>Latin:</strong> <%= color.latin_name %></p>
          <p><strong>Common:</strong> <%= color.common_name %></p>
          <p><strong>Hex:</strong> <%= color.hex %></p>
          <p><strong>Group:</strong> <%= color.color_group %></p>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", color, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_color_path(color), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", color, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No colors found.</p>
    <% end %>
  </div>
</div>
