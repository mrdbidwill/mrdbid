<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Books & References</h1>

  <div class="space-y-4">
    <% @source_data.each do |item| %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2"><%= item.title %></h2>
        <p class="text-gray-600 mb-1"><strong>Author:</strong> <%= item.author %></p>
        <p class="text-sm text-gray-500 mb-2"><strong>Type:</strong> <%= item.source_data_type.name %></p>
        <% if item.comments.present? %>
          <p class="text-gray-700"><%= item.comments %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
