<% content_for :title, "Mushrooms" %>
<p> app/views/mushrooms/index.html.erb> </p>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Mushrooms</h1>
    <% if user_signed_in? %>
      <%= link_to "New mushroom", new_mushroom_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="mushrooms" class="min-w-full divide-y divide-gray-200 space-y-5">

    <% if @mushrooms&.any? %>
      <% @mushrooms.each do |mushroom| %>
        <div class="flex flex-col gap-4 pb-5">
          <% images = mushroom.image_mushrooms.select { |im| im.image_file.attached? } %>
          <% if images.any? %>
            <div class="w-full">
              <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
                <% images.each do |image_mushroom| %>
                  <div class="border rounded-md overflow-hidden">
                    <%= image_tag image_mushroom.image_file.variant(resize_to_limit: [800, 600]).processed, class: "w-full h-auto block" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No images for this mushroom.</p>
          <% end %>

          <%= render mushroom %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No mushrooms found.</p>
    <% end %>
  </div>
</div>