<% content_for :title, "Mushrooms" %>

<h1 class="text-3xl font-bold text-gray-900 mb-4">
  <% if user_signed_in? %>
    <% if @viewing_all %>
      All Mushrooms
    <% else %>
      Your Mushrooms
    <% end %>
  <% else %>
    Demo Collection
  <% end %>
</h1>

<% unless user_signed_in? %>
  <%= render "shared/sample_collections_cta" %>
<% end %>

<!-- Search card -->
<div class="group-box mb-6" style="border: 2px solid #9333ea;">
  <div class="group-header" style="background-color: #f3e8ff;">
    Search for a Specific Mushroom
    <p class="hint mt-1">Search across name, description, comments, city, and genus. Minimum 3 characters required.</p>
  </div>
  <div class="px-4 py-3">
    <%= form_with url: mushrooms_path, method: :get, local: true, class: "grid grid-cols-1 gap-2 sm:grid-cols-3 items-end" do %>
      <div class="form-field sm:col-span-2">
        <label for="q" class="form-label">Search Term</label>
        <%= text_field_tag :q, params[:q], placeholder: "e.g. 'Chanterelle', 'Austin', 'cap red'",
                           minlength: 3,
                           class: "form-input",
                           style: "padding: 0.5rem; box-shadow: 0 0 0 1px rgba(0,0,0,0.06), 0 0 10px 2px rgba(0,0,0,0.12), 0 0 24px 6px rgba(0,0,0,0.12);" %>
        <p class="form-help">Searches name, description, comments, city, and genus. Partial matches OK. Min 3 characters.</p>
      </div>
      <div class="flex gap-2">
        <%= submit_tag "Search", class: "btn-primary" %>
        <%= link_to "Clear Search", mushrooms_path, class: "btn" %>
      </div>
    <% end %>
  </div>

  <!-- Current search summary -->
  <div class="well">
    <% if params[:q].present? %>
      <div class="flex flex-wrap items-center gap-2 text-sm">
        <span class="text-gray-700 font-medium">Search:</span>
        <span class="inline-flex items-center gap-1 rounded-full bg-purple-50 text-purple-700 px-2.5 py-1">
          <span class="font-medium">Query:</span>
          <span><%= params[:q] %></span>
        </span>
        <%= link_to "Clear", mushrooms_path, class: "ml-auto text-blue-700 hover:underline" %>
      </div>
    <% else %>
      <p class="muted">No search applied.</p>
    <% end %>
  </div>
</div>
<!-- End Search card -->

<%= render "shared/pagination", collection: @mushrooms %>

<% if @mushrooms&.any? %>
  <% grouped = @mushrooms.group_by { |m| m.fungus_type&.name.to_s.presence || "Uncategorized" } %>
  <% grouped.keys.sort.each do |ft_name| %>
    <!-- Fungus Type Header -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-3 pb-2 border-b-2 border-gray-300">
        <%= ft_name %>
      </h2>

      <!-- 4-column grid of mushrooms -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% grouped[ft_name].each do |mushroom| %>
          <%= link_to mushroom_path(mushroom), class: "block border border-gray-300 rounded-lg overflow-hidden hover:shadow-lg transition bg-white" do %>
            <!-- Image -->
            <% images = mushroom.image_mushrooms.select { |im| im.image_file.attached? } %>
            <% if images.any? %>
              <div class="relative w-full" style="height: 200px;">
                <%= image_tag(
                      url_for(images.first.image_file.variant(
                        resize_to_fill: [300, 300],
                        format: :webp,
                        saver: { strip: true, quality: 70, effort: 4 }
                      )),
                      alt: mushroom.name || "Mushroom image",
                      class: "w-full h-full object-cover",
                      onerror: "this.style.display='none'; this.parentElement.innerHTML='<div class=\\'w-full h-full bg-gray-200 flex items-center justify-center\\'><span class=\\'text-gray-400 text-sm\\'>Image unavailable</span></div>';"
                    ) %>
                <% if images.size > 1 %>
                  <span class="absolute top-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded">
                    +<%= images.size - 1 %>
                  </span>
                <% end %>
              </div>
            <% else %>
              <!-- Placeholder if no image -->
              <div class="w-full bg-gray-200 flex items-center justify-center" style="height: 200px;">
                <span class="text-gray-400 text-sm">No image</span>
              </div>
            <% end %>

            <!-- Text content below image -->
            <div class="p-3">
              <% identifications = mushroom.ranked_identifications %>
              <% if identifications.any? %>
                <div class="text-xs italic text-gray-600 mb-1 space-y-0.5">
                  <% identifications.each do |id| %>
                    <div>
                      <% if id[:fully_primary] %>
                        <span class="text-green-600">âœ“</span>
                      <% end %>
                      <em><%= id[:genus]&.name&.capitalize || '?' %> <%= id[:species]&.name || '?' %></em>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <p class="font-semibold text-gray-900 mb-1">
                <%= mushroom.name.presence || "Unnamed" %>
              </p>

              <% if @viewing_all && mushroom.user %>
                <p class="text-xs text-gray-500 mb-1">
                  ðŸ‘¤ <%= mushroom.user.display_name %>
                </p>
              <% end %>

              <% if mushroom.collection_date.present? %>
                <p class="text-xs text-gray-600">
                  <%= mushroom.collection_date.strftime('%m-%d-%Y') %>
                </p>
              <% end %>

              <% location_parts = [
                mushroom.city,
                (mushroom.county.present? ? "#{mushroom.county} County" : nil),
                mushroom.state&.name,
                mushroom.country&.name
              ].compact.reject(&:blank?) %>
              <% if location_parts.any? %>
                <p class="text-xs text-gray-500">
                  <%= location_parts.join(", ") %>
                </p>
              <% end %>

              <% description = truncate(mushroom.description.to_s, length: 80) %>
              <% if description.present? %>
                <p class="text-xs text-gray-700 mt-2">
                  <%= description %>
                </p>
              <% end %>

              <!-- Organization badges (compact) -->
              <% clusters = mushroom.clusters %>
              <% groups = mushroom.all_groups %>
              <% projects = mushroom.projects %>
              <% if clusters.any? || groups.any? || projects.any? %>
                <div class="mt-3 pt-2 border-t border-gray-200">
                  <div class="flex flex-wrap gap-1">
                    <% clusters.each do |cluster| %>
                      <span class="inline-block bg-blue-100 text-blue-700 text-xs px-2 py-0.5 rounded-full" title="Cluster: <%= cluster.name %>">
                        <%= truncate(cluster.name, length: 15) %>
                      </span>
                    <% end %>
                    <% groups.each do |group| %>
                      <span class="inline-block bg-green-100 text-green-700 text-xs px-2 py-0.5 rounded-full" title="Group: <%= group.name %>">
                        <%= truncate(group.name, length: 15) %>
                      </span>
                    <% end %>
                    <% projects.each do |project| %>
                      <span class="inline-block <%= project.universal? ? 'bg-purple-100 text-purple-700' : 'bg-gray-100 text-gray-700' %> text-xs px-2 py-0.5 rounded-full" title="Project: <%= project.name %><%= ' (Universal)' if project.universal? %>">
                        <%= truncate(project.name, length: 15) %><%= "ðŸŒ" if project.universal? %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-center text-gray-600 my-8">No mushrooms found.</p>
<% end %>

<%= render "shared/pagination", collection: @mushrooms %>
