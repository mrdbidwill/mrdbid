<%# locals: (cluster_mushroom: ClusterMushroom, mushrooms: ActiveRecord::Relation, clusters: ActiveRecord::Relation) %>
<%= form_with(model: cluster_mushroom, class: "contents") do |form| %>
  <% if cluster_mushroom.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(cluster_mushroom.errors.count, "error") %> prohibited this cluster_mushroom from being saved:</h2>
      <ul class="list-disc ml-6">
        <% cluster_mushroom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% preselected_mushroom = cluster_mushroom.mushroom || mushrooms.first %>
  <%= form.hidden_field :mushroom_id, value: preselected_mushroom&.id %>

  <div class="my-3">
    <label class="text-sm text-gray-600">Mushroom:</label>
    <div class="mt-1 px-2 py-1 bg-gray-50">
      <%= preselected_mushroom ? preselected_mushroom.name : "None selected" %>
    </div>
  </div>

  <div class="my-5">
    <%= form.label :cluster_id, "Choose a Cluster" %>
    <% if clusters.present? %>
      <div class="mt-2 space-y-2">
        <% clusters.each do |c| %>
          <label class="flex items-center gap-2">
            <%= form.radio_button :cluster_id, c.id %>
            <span><%= c.name %></span>
          </label>
        <% end %>
      </div>
    <% else %>
      <div class="mt-2 text-sm text-gray-500">No clusters available.</div>
    <% end %>
    <% if cluster_mushroom.errors[:cluster_id].any? %>
      <div class="text-red-600 text-sm mt-1"><%= cluster_mushroom.errors[:cluster_id].join(", ") %></div>
    <% end %>
  </div>

  <div class="inline">
    <%= form.submit "Add to Mushroom", class: "w-full sm:w-auto rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>