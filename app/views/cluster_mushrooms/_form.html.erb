<%# locals: (cluster_mushroom: ClusterMushroom, mushrooms: ActiveRecord::Relation, clusters: ActiveRecord::Relation) %>
<%= form_with(model: cluster_mushroom, class: "contents") do |form| %>
  <% if cluster_mushroom.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(cluster_mushroom.errors.count, "error") %> prohibited this cluster_mushroom from being saved:</h2>

      <ul class="list-disc ml-6">
        <% cluster_mushroom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :cluster_id, "Cluster" %>
    <%= form.text_field :cluster_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                  { "border-gray-400 focus:outline-blue-600": cluster_mushroom.errors[:cluster].none? && cluster_mushroom.errors[:cluster_id].none?,
                    "border-red-400 focus:outline-red-600": cluster_mushroom.errors[:cluster].any? || cluster_mushroom.errors[:cluster_id].any? }] %>
  </div>

  <div class="my-5">
    <%= form.label :mushroom_id, "Mushroom" %>
    <%= form.text_field :mushroom_id, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                  { "border-gray-400 focus:outline-blue-600": cluster_mushroom.errors[:mushroom].none? && cluster_mushroom.errors[:mushroom_id].none?,
                    "border-red-400 focus:outline-red-600": cluster_mushroom.errors[:mushroom].any? || cluster_mushroom.errors[:mushroom_id].any? }] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>