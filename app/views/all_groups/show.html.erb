<% content_for :title, "Showing Group" %>

<div class="md:w-2/3 w-full">

  <h1 class="font-bold text-2xl">Showing Group</h1>

  <%= render @all_group %>

  <%= link_to "Edit this Group", edit_all_group_path(@all_group), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= link_to "Back to Groups", all_groups_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= button_to "Delete this Group", @all_group, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-2 py-1 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
