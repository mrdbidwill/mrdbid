<% content_for :title, "Groups" %>

<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="title-xl">Groups</h1>
    <%= link_to "New Group", new_all_group_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <% if params[:mushroom_id].present? %>
    <% mushroom = Mushroom.find_by(id: params[:mushroom_id]) %>
    <% if mushroom %>
      <div class="my-4 p-4 bg-blue-50 border border-blue-300 rounded">
        <p class="text-sm font-semibold text-blue-900 mb-2">
          Adding mushroom "<%= mushroom.name || "Unnamed" %>" to a group
        </p>
        <p class="text-xs text-blue-700">Click "Add to This Group" button next to the group you want to add this mushroom to.</p>
      </div>
    <% end %>
  <% end %>

  <div id="all_groups" class="stack-list">
    <p class="p-mrdbid">You create <b>your</b> groups to use however you see fit. The goal is to help you organize your mushrooms and make it easier to find the ones you want.</p>
    <p class="p-mrdbid">The original thought is a group relates to a place. However, you can use them however you see fit.</p>
    <% if @all_groups.any? %>
      <% @all_groups.each do |all_group| %>
        <div class="stack-row">
          <%= render all_group %>
          <%= render "shared/page_actions",
                     right: (
                       (
                         (params[:mushroom_id].present? && Mushroom.exists?(params[:mushroom_id]) ?
                           link_to("Add to This Group", all_group_mushrooms_path(all_group_id: all_group.id, mushroom_id: params[:mushroom_id]), method: :post, class: "btn-primary", data: { turbo_confirm: "Add this mushroom to #{all_group.name}?" }) : "") +
                           link_to("Edit", edit_all_group_path(all_group), class: "btn-primary") +
                           button_to("Delete", all_group_path(all_group), method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure?" })
                       ).html_safe
                     )
          %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No Groups found.</p>
    <% end %>
  </div>
</div>
