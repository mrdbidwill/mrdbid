<% content_for :title, "Groups" %>

<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="title-xl">Groups</h1>
    <%= link_to "New Group", new_all_group_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="all_groups" class="stack-list">
    <p class="p-mrbid">You create <b>your</b> groups to use however you see fit. The goal is to help you organize your mushrooms and make it easier to find the ones you want.</p>
    <p class="p-mrbid">The original thought is a group relates to a place. However, you can use them however you see fit.</p>
    <% if @all_groups.any? %>
      <% @all_groups.each do |all_group| %>
        <div class="stack-row">
          <%= render all_group %>
          <%= render "shared/page_actions",
                     right: (
                       (
                         link_to("Show", all_group_path(all_group), class: "btn-primary") +
                           link_to("Edit", edit_all_group_path(all_group), class: "btn-primary") +
                           button_to("Delete", all_group_path(all_group), method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure?" })
                       ).html_safe
                     )
          %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No Groups found.</p>
    <% end %>
  </div>
</div>
