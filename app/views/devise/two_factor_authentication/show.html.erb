<div class="w-full auto-margins max-w-md mt-8 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4">Two-Factor Authentication</h2>

  <p class="text-gray-700 mb-6">Enter the 6-digit code from your authenticator app to continue.</p>

  <%= form_with url: user_two_factor_authentication_path, method: :patch, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :otp_attempt, "Authentication Code", class: "block font-medium mb-2" %>
      <%= form.text_field :otp_attempt,
          required: true,
          maxlength: 6,
          placeholder: "000000",
          autocomplete: "off",
          autofocus: true,
          class: "block shadow-sm rounded-md border px-3 py-2 w-full font-mono text-center text-2xl tracking-widest" %>
    </div>

    <div class="mb-6 flex items-center">
      <%= form.check_box :trust_device, class: "mr-2" %>
      <%= form.label :trust_device, "Trust this device for 30 days", class: "text-sm text-gray-700" %>
    </div>

    <div>
      <%= form.submit "Verify and Sign In", class: "w-full rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium cursor-pointer" %>
    </div>

    <div class="mt-4 text-sm text-gray-600">
      <p>Lost access to your authenticator? <%= link_to "Use a backup code", "#", class: "text-blue-600 hover:text-blue-700" %></p>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "← Back to login", new_user_session_path, class: "text-sm text-gray-600 hover:text-gray-800" %>
  </div>
</div>