<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="w-full auto-margins max-w-md">
    <h1 class="font-bold text-4xl mb-4">Sign up</h1>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="my-4">
      <%= f.label :email, class: "block font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-4">
      <%= f.label :display_name, class: "block font-medium" %>
      <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name", class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-4">
      <%= f.label :password, class: "block font-medium" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-600">( <%= @minimum_password_length %> characters minimum )</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-4">
      <%= f.label :password_confirmation, class: "block font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Sign up", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>

    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
