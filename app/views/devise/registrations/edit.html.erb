
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<p>app/views/devise/registrations/edit.html.erb</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="w-full auto-margins max-w-md">
    <h1 class="font-bold text-2xl mb-4">Edit <%= resource_name.to_s.humanize %></h1>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="my-4">
      <%= f.label :email, class: "block font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow-sm rounded-md border px-2 py-1 mt-2 w-full" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-700 mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="my-4">
      <%= f.label :display_name, class: "block font-medium" %>
      <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name", class: "block shadow-sm rounded-md border px-2 py-1 mt-2 w-full" %>
    </div>

    <div class="my-4">
      <%= f.label :password, class: "block font-medium" %> <i class="text-gray-600">(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "block shadow-sm rounded-md border px-2 py-1 mt-2 w-full" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-600"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="my-4">
      <%= f.label :password_confirmation, class: "block font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block shadow-sm rounded-md border px-2 py-1 mt-2 w-full" %>
    </div>

    <div class="my-4">
      <%= f.label :current_password, class: "block font-medium" %> <i class="text-gray-600">(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "block shadow-sm rounded-md border px-2 py-1 mt-2 w-full" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Update", class: "w-full sm:w-auto rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "mt-2 rounded-md px-2 py-1 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %></div>

<%= link_to "Back", :back, class: "mt-2 inline-block rounded-md px-2 py-1 bg-gray-100 hover:bg-gray-50 font-medium" %>

<% if current_user.otp_secret.present? && current_user.otp_provisioning_uri.present? %>
  <p class="mt-6">Scan this QR code with your authenticator app:</p>
  <%= raw RQRCode::QRCode.new(current_user.otp_provisioning_uri).as_svg(module_size: 6) %>
<% end %>

