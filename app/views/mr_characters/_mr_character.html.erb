<div id="<%= dom_id mr_character %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= mr_character.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Display option:</strong>
    <%= mr_character.display_option_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Part:</strong>
    <%= mr_character.part_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Source data:</strong>
    <%= mr_character.source_data_id %>
  </div>
</div>
