<% content_for :title, "Universal Projects" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-1 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-2xl">Universal Projects</h1>
    <div class="flex gap-2">
      <%= link_to "Back to Admin", admin_root_path, class: "rounded-md px-2 py-1 bg-gray-600 hover:bg-gray-500 text-white block font-medium" %>
      <%= link_to "New Universal Project", new_admin_project_path, class: "rounded-md px-2 py-1 bg-purple-600 hover:bg-purple-500 text-white block font-medium" %>
    </div>
  </div>

  <div class="mb-4 p-3 bg-purple-50 border border-purple-200 rounded">
    <p class="text-sm text-purple-900">
      <strong>üåç Universal Projects</strong> are available to all users for organizing their mushroom specimens.
      Examples: "Spring 2024 Foray", "Poisonous Species Study", "Edibles Collection"
    </p>
  </div>

  <div id="projects" class="mt-4 space-y-2">
    <% if @projects.any? %>
      <% universal_projects = @projects.select(&:universal?) %>
      <% user_projects = @projects.reject(&:universal?) %>

      <% if universal_projects.any? %>
        <h2 class="font-semibold text-lg mt-4 mb-2">Universal Projects (<%= universal_projects.count %>)</h2>
        <% universal_projects.each do |project| %>
          <div class="border-l-4 border-purple-500 rounded p-3 bg-white shadow-sm">
            <div class="flex flex-wrap items-start justify-between gap-2">
              <div class="flex-1">
                <div class="flex items-center gap-2">
                  <h3 class="font-semibold text-gray-900"><%= project.name %></h3>
                  <span class="text-xs bg-purple-100 text-purple-800 px-2 py-0.5 rounded">üåç Universal</span>
                  <span class="text-xs text-gray-500">(<%= project.mushrooms.count %> specimens)</span>
                </div>
                <% if project.description.present? %>
                  <p class="text-sm text-gray-600 mt-1"><%= project.description %></p>
                <% end %>
              </div>
              <div class="flex gap-2">
                <%= link_to "Edit", edit_admin_project_path(project), class: "text-sm px-3 py-1 rounded bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
                <%= button_to "Delete", admin_project_path(project), method: :delete,
                    data: { turbo_confirm: "Delete '#{project.name}'? This will remove it from all users' specimens." },
                    class: "text-sm px-3 py-1 rounded bg-red-600 hover:bg-red-500 text-white font-medium" %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if user_projects.any? %>
        <h2 class="font-semibold text-lg mt-6 mb-2">User-Specific Projects (<%= user_projects.count %>)</h2>
        <p class="text-sm text-gray-600 mb-2 italic">These were created by individual users and are not universal.</p>
        <% user_projects.each do |project| %>
          <div class="border-l-4 border-gray-300 rounded p-3 bg-gray-50">
            <div class="flex flex-wrap items-start justify-between gap-2">
              <div class="flex-1">
                <div class="flex items-center gap-2">
                  <h3 class="font-semibold text-gray-700"><%= project.name %></h3>
                  <span class="text-xs bg-gray-200 text-gray-700 px-2 py-0.5 rounded">User: <%= project.user.email %></span>
                  <span class="text-xs text-gray-500">(<%= project.mushrooms.count %> specimens)</span>
                </div>
                <% if project.description.present? %>
                  <p class="text-sm text-gray-600 mt-1"><%= project.description %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-500">No projects found. Create a universal project to get started.</p>
    <% end %>
  </div>
</div>
