<%= form_with(model: mr_character, class: "contents") do |form| %>
  <% if mr_character.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(mr_character.errors.count, "error") %> prohibited this Mushroom Character from being saved:</h2>

      <ul class="list-disc ml-6">
        <% mr_character.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div><p>app/views/mr_characters/_form.html.erb</p></div>

  <div class="my-5">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: ["block shadow-md rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mr_character.errors[:name].none?, "border-red-400 focus:outline-red-600": mr_character.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :part_id, "Part" %>
    <%= form.number_field :part_id, class: ["block shadow-md rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mr_character.errors[:part_id].none?, "border-red-400 focus:outline-red-600": mr_character.errors[:part_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lookup_type_id, "Lookup Type" %>
    <%= form.number_field :lookup_type_id, class: ["block shadow-md rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mr_character.errors[:lookup_type_id].none?, "border-red-400 focus:outline-red-600": mr_character.errors[:lookup_type_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :display_option_id, "Display Option" %>
    <%= form.number_field :display_option_id, class: ["block shadow-md rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mr_character.errors[:display_option_id].none?, "border-red-400 focus:outline-red-600": mr_character.errors[:display_option_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :source_data_id, "Source Data" %>
    <%= form.text_field :source_data_id, class: ["block shadow-md rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mr_character.errors[:source_data_id].none?, "border-red-400 focus:outline-red-600": mr_character.errors[:source_data_id].any?}] %>
  </div>

  <%# mr_character.persisted? checks if mr_character already exists in database %>
  <div class="inline">
    <%= form.submit(
          mr_character.persisted? ? "Update Mushroom Character" : "Create Mushroom Character",
          class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer"
        ) %>
  </div>

<% end %>
