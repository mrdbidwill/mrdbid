<% content_for :title, "Editing Mushroom Character" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing Mushroom Character</h1>

  <%= render "form", mr_character: @mr_character %>

  <%= link_to "Show this character", admin_mr_character_path(@mr_character), class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  <%= link_to "Back to characters", admin_mr_characters_path, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
</div>
