<% content_for :title, "Showing Mushroom Character" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-1 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-2xl">Showing mushroom character</h1>

  <%= render @mr_character %>

  <%= link_to "Edit this mr_character", edit_admin_mr_character_path(@mr_character), class: "w-full sm:w-auto rounded-md px-3.5 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  <%= link_to "Back to mr_characters", admin_mr_characters_path, class: "w-full sm:w-auto rounded-md px-3.5 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  <%#  <%# button_to "Delete this mr_character", admin_mr_character_path(@mr_character), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-2 py-1 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
