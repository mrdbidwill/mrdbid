<%= form_with(
      model: source_data,
      url: source_data.persisted? ? admin_source_datum_path(source_data) : admin_source_data_path,
      class: "contents"
    ) do |form| %>
  <% if source_data.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(source_data.errors.count, "error") %> prohibited this source_datum from being saved:</h2>

      <ul class="list-disc ml-6">
        <% source_data.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data.errors[:title].none?, "border-red-400 focus:outline-red-600": source_data.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :author %>
    <%= form.text_field :author, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data.errors[:author].none?, "border-red-400 focus:outline-red-600": source_data.errors[:author].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :ref %>
    <%= form.text_field :ref, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data.errors[:ref].none?, "border-red-400 focus:outline-red-600": source_data.errors[:ref].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :item_code %>
    <%= form.text_field :item_code, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data.errors[:item_code].none?, "border-red-400 focus:outline-red-600": source_data.errors[:item_code].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :source_data_type_id, "Part" %>
    <div class="mt-2 grid grid-cols-1 sm:grid-cols-2 gap-2">
      <%= form.collection_radio_buttons :source_data_type_id, SourceDataType.order(:name), :id, :name do |b| %>
        <label class="flex items-center gap-2 p-2 rounded border cursor-pointer hover:bg-gray-50">
          <%= b.radio_button(class: "text-blue-600 focus:ring-blue-600") %>
          <span><%= b.text %></span>
        </label>
      <% end %>
    </div>
  </div>

  <div class="my-5">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data.errors[:comments].none?, "border-red-400 focus:outline-red-600": source_data.errors[:comments].any?}] %>
  </div>

  <%= render "admin/shared/form_actions",
             record: source_data,
             back_path: admin_source_data_path,
             submit_text: (source_data.persisted? ? "Update" : "Create"),
             show_text: "Show this source data",
             back_text: "Back to Source Data" %>
<% end %>
