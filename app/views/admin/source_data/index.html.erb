<% content_for :title, "Source data" %>

<div>
  <p>app/views/admin/source_data/index.html.erb</p>
</div>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Source Data</h1>

    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New Source Data", new_admin_source_datum_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <!-- Pagination links (Top) -->
  <% if @source_data.any? %>
    <div class="my-4">
      <%= paginate @source_data,
                   theme: 'tailwind_bar',
                   params: request.query_parameters,
                   window: 2,        # how many pages around current
                   outer_window: 1   # how many pages at the ends
      %>
    </div>
  <% end %>

  <div id="source_data" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @source_data.any? %>
      <% @source_data.each do |source_datum| %>
        <div class="pb-5">
          <%= render source_datum %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No source data found.</p>
    <% end %>
  </div>
  <!-- Pagination links (BOTTOM) -->
  <% if @source_data.any? %>
    <div class="my-4">
      <%= paginate @source_data,
                   theme: 'tailwind_bar',
                   params: request.query_parameters,
                   window: 2,        # how many pages around current
                   outer_window: 1   # how many pages at the ends
      %>
    </div>
  <% end %>
</div>
