<%= form_with(model: [:admin, camera_make], class: "contents") do |form| %>
  <% if camera_make.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(camera_make.errors.count, "error") %> prohibited this camera_make from being saved:</h2>

      <ul class="list-disc ml-6">
        <% camera_make.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": camera_make.errors[:name].none?, "border-red-400 focus:outline-red-600": camera_make.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": camera_make.errors[:description].none?, "border-red-400 focus:outline-red-600": camera_make.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": camera_make.errors[:comments].none?, "border-red-400 focus:outline-red-600": camera_make.errors[:comments].any?}] %>
  </div>

  <%# camera_make.persisted? checks if camera_make already exists in database %>
  <div class="inline">
    <%= form.submit(
          camera_make.persisted? ? "Update Camera Make" : "Create Camera Make",
          class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer"
        ) %>
  </div>
<% end %>
