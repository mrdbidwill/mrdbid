<% content_for :title, "Showing camera make" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Showing camera make</h1>

  <%= render @camera_make %>

  <%= link_to "Edit this camera make", edit_admin_camera_make_path(@camera_make), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= link_to "Back to camera makes", admin_camera_makes_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= button_to "Delete this camera make", admin_camera_make_path(@camera_make), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
