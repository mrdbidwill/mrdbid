<% content_for :title, "Camera makes" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Camera makes</h1>

    <div><p>app/views/camera_makes/index.html.erb</p></div>

    <%= link_to "Back to dashboard", admin_root_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New camera make", new_admin_camera_make_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="camera_makes" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @camera_makes.any? %>
      <% @camera_makes.each do |camera_make| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render camera_make %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", admin_camera_make_path(camera_make), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
            <%= link_to "Edit", edit_admin_camera_make_path(camera_make), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
            <%# button_to "Delete this camera make", admin_camera_make_path(camera_make), method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No camera makes found.</p>
    <% end %>
  </div>
</div>
