<% content_for :title, "MB Lists" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-1 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">MB Lists</h1>
    <%= link_to "New MB List", new_admin_mb_list_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="mb_lists" class="min-w-full divide-y divide-gray-100 space-y-5">
    <% if @mb_lists.any? %>
      <% @mb_lists.each do |mb_list| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render mb_list %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-1">
            <%= link_to "Show", admin_mb_list_path(mb_list), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
            <%= link_to "Edit", edit_admin_mb_list_path(mb_list), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
            <%= button_to "Delete", admin_mb_list_path(mb_list), method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-md px-2 py-1 bg-red-600 hover:bg-red-500 text-white font-medium" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="py-4">No MB Lists found.</p>
    <% end %>
  </div>
</div>
