<%= form_with(model: [:admin, mb_list], class: "contents") do |form| %>
  <% if mb_list.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(mb_list.errors.count, "error") %> prohibited this MB List from being saved:</h2>

      <ul class="list-disc ml-6">
        <% mb_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :taxon_name %>
    <%= form.text_field :taxon_name, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mb_list.errors[:taxon_name].none?, "border-red-400 focus:outline-red-600": mb_list.errors[:taxon_name].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-primary btn-responsive" %>
  </div>
<% end %>
