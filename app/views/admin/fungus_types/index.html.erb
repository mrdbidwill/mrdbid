<% content_for :title, "Fungus Types" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Fungus Types</h1>
    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New fungus type", new_admin_fungus_type_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="fungus_types" class="mt-4 space-y-2">
    <% if @fungus_types.any? %>
      <% @fungus_types.each do |fungus_type| %>
        <div class="border rounded p-3 bg-white">
          <div class="flex flex-wrap items-center justify-between gap-2">
            <%= render fungus_type %>
            <div class="flex gap-2">
              <%= link_to "Show", admin_fungus_type_path(fungus_type), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
              <%= link_to "Edit", edit_admin_fungus_type_path(fungus_type), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
              <%# button_to "Delete", admin_fungus_type_path(fungus_type), method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No fungus types found.</p>
    <% end %>
  </div>
</div>
