<%= form_with(model:  [:admin, country], class: "contents") do |form| %>
  <% if country.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul class="list-disc ml-6">
        <% country.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-2">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": country.errors[:name].none?, "border-red-400 focus:outline-red-600": country.errors[:name].any?}] %>
  </div>

  <div class="my-2">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": country.errors[:description].none?, "border-red-400 focus:outline-red-600": country.errors[:description].any?}] %>
  </div>

  <div class="my-2">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": country.errors[:comments].none?, "border-red-400 focus:outline-red-600": country.errors[:comments].any?}] %>
  </div>

  <div class="mt-4 flex flex-col sm:flex-row gap-2 mx-1 my-1">
    <%= form.submit class: "inline-flex items-center justify-center rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium sm:flex-1" %>
    <%= link_to "Back to Countries", admin_countries_path, class: "inline-flex items-center justify-center rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium sm:flex-1" %>
  </div>
<% end %>
