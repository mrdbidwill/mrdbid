<% content_for :title, "Countries" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-1 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Countries</h1>
    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New country", new_admin_country_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="countries" class="mt-4 space-y-1">
    <% if @countries.any? %>
      <% @countries.each do |country| %>
        <div class="border rounded p-3 bg-white">
          <div class="flex flex-wrap items-center justify-between gap-2">
              <%= render country %>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-1">
              <%= render "admin/shared/resource_actions", record: country, delete: false %>
            </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center my-10">No countriesfound.</p>
    <% end %>
  </div>
