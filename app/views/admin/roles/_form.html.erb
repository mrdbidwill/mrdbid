<%= form_with(model: [:admin, role], class: "contents") do |form| %>
  <% if role.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul class="list-disc ml-6">
        <% role.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": role.errors[:name].none?, "border-red-400 focus:outline-red-600": role.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": role.errors[:description].none?, "border-red-400 focus:outline-red-600": role.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :comments %>
    <%= form.textarea :comments, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": role.errors[:comments].none?, "border-red-400 focus:outline-red-600": role.errors[:comments].any?}] %>
  </div>

  <%= render "admin/shared/form_actions",
             record: role,
             back_path: admin_roles_path,
             submit_text: (role.persisted? ? "Update" : "Create"),
             show_text: "Show this role",
             back_text: "Back to roles" %>
<% end %>
