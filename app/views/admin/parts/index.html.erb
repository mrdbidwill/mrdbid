<% content_for :title, "Parts" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Parts</h1>
    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New part", new_admin_part_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="parts" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @parts.any? %>
      <% @parts.each do |part| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render part %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= render "admin/shared/resource_actions", record: part, delete: false %>  <!-- show, edit, destroy (optional -->
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No parts found.</p>
    <% end %>
  </div>
</div>
