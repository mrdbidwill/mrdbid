<%= form_with(model: [:admin, species], class: "contents") do |form| %>
  <% if species.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(species.errors.count, "error") %> prohibited this species from being saved:</h2>

      <ul class="list-disc ml-6">
        <% species.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": species.errors[:name].none?, "border-red-400 focus:outline-red-600": species.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :genera_id, "Genus" %>
    <%= form.collection_select :genera_id, Genus.all, :id, :name, {}, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": species.errors[:genera_id].none?, "border-red-400 focus:outline-red-600": species.errors[:genera_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :mblist_id, "MB List ID" %>
    <%= form.number_field :mblist_id, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": species.errors[:mblist_id].none?, "border-red-400 focus:outline-red-600": species.errors[:mblist_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-primary btn-responsive" %>
  </div>
<% end %>
