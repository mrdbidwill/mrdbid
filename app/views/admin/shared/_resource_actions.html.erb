<!-- app/views/admin/shared/_resource_actions.html.erb -->
<%# Locals: record:, delete: false, confirm: nil, btn_class: nil, danger_btn_class: nil %>
<% btn_class        = local_assigns.fetch(:btn_class, "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium") %>
<% danger_btn_class = local_assigns.fetch(:danger_btn_class, "w-full sm:w-auto rounded-md px-2 py-1 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer") %>
<% confirm_text     = local_assigns.fetch(:confirm, "Are you sure?") %>

<div class="w-full sm:w-auto flex flex-col sm:flex-row gap-2">
  <%= link_to "Show", polymorphic_path([:admin, record]), class: btn_class %>
  <%= link_to "Edit", edit_polymorphic_path([:admin, record]), class: btn_class %>
  <% if delete %>
    <%= button_to "Delete", polymorphic_path([:admin, record]), method: :delete, form_class: "sm:inline-block", class: danger_btn_class, data: { turbo_confirm: confirm_text } %>
  <% end %>
</div>

