<% content_for :title, "Admin To Do" %>

<div class="w-full max-w-3xl">
  <div class="flex items-center justify-between mb-6">
    <h1 class="font-bold text-2xl">Admin To Do</h1>
    <div class="flex gap-2">
      <%= link_to "Back to List", admin_admin_todos_path, class: "rounded-md px-3 py-1.5 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
      <%= link_to "Edit", edit_admin_admin_todo_path(@admin_todo), class: "rounded-md px-3 py-1.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    </div>
  </div>

  <div class="bg-white border rounded-lg p-6 space-y-4">
    <div>
      <div class="text-sm font-medium text-gray-500">Title</div>
      <div class="text-lg font-semibold <%= 'line-through text-gray-500' if @admin_todo.done %>">
        <%= @admin_todo.title %>
      </div>
    </div>

    <% if @admin_todo.description.present? %>
      <div>
        <div class="text-sm font-medium text-gray-500">Description</div>
        <div class="text-gray-700 mt-1">
          <%= simple_format(@admin_todo.description) %>
        </div>
      </div>
    <% end %>

    <div>
      <div class="text-sm font-medium text-gray-500">Status</div>
      <div class="mt-1">
        <% if @admin_todo.done %>
          <span class="inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
            Completed
          </span>
        <% else %>
          <span class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">
            Pending
          </span>
        <% end %>
      </div>
    </div>

    <div>
      <div class="text-sm font-medium text-gray-500">Created By</div>
      <div class="text-gray-700"><%= @admin_todo.user.email %></div>
    </div>

    <div class="flex gap-4 text-xs text-gray-500">
      <div>
        <span class="font-medium">Created:</span> <%= @admin_todo.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
      <div>
        <span class="font-medium">Updated:</span> <%= @admin_todo.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <%= button_to "Delete To Do",
                  admin_admin_todo_path(@admin_todo),
                  method: :delete,
                  class: "rounded-md px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium",
                  data: { turbo_confirm: "Are you sure you want to delete this to do item?" } %>
  </div>
</div>
