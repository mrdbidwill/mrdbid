<% content_for :title, "Showing plant" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Showing plant</h1>

  <%= render @plant %>

  <%= link_to "Edit this plant", edit_admin_plant_path(@plant), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to plants", admin_plants_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= button_to "Delete this plant", admin_plant_path(@plant), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
