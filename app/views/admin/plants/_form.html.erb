<%= form_with(model: [:admin, plant], class: "contents") do |form| %>
  <% if plant.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul class="list-disc ml-6">
        <% plant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": plant.errors[:name].none?, "border-red-400 focus:outline-red-600": plant.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": plant.errors[:description].none?, "border-red-400 focus:outline-red-600": plant.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": plant.errors[:comments].none?, "border-red-400 focus:outline-red-600": plant.errors[:comments].any?}] %>
  </div>

  <%= render "admin/shared/form_actions",
             record: plant,
             back_path: admin_plants_path,
             submit_text: (plant.persisted? ? "Update" : "Create"),
             show_text: "Show this plant",
             back_text: "Back to plants" %>
<% end %>
