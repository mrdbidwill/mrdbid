<% content_for :title, "Showing observation method" %>
<div><p>app/views/admin/observation_methods/show.html.erb</p></div>
<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-1 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-2xl">Showing observation method</h1>

  <%= render @observation_method %>

  <%= link_to "Show", admin_observation_method_path(@observation_method), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= link_to "Edit", edit_admin_observation_method_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%# button_to "Delete", admin_observation_method_path(@observation_method), method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure?" } %>
</div>
