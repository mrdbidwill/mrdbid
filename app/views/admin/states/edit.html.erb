<% content_for :title, "Editing state" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-2xl">Editing state</h1>

  <%= render "form", state: @state %>

  <%= link_to "Show this state", admin_state_path(@state), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= link_to "Back to states", admin_states_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
</div>
