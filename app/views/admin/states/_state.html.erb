<div id="<%= dom_id state %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= state.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= state.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Comments:</strong>
    <%= state.comments %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Country:</strong>
    <%= state.country&.name || state.country_id %>
  </div>
</div>
