<% content_for :title, "Showing lookup item" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="px-2 py-1 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-2xl">Showing lookup item</h1>

  <%= render @lookup_item %>

  <%= link_to "Edit this lookup_item", edit_admin_lookup_item_path(@lookup_item), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= link_to "Back to lookup_items", admin_lookup_items_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%# button_to "Delete this camera make", admin_camera_make_path(@lookup_item), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-2 py-1 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
