<div id="<%= dom_id source_data_type %>" class="rounded-md border border-gray-200 bg-white p-3 shadow-sm hover:shadow transition">
  <div class="flex items-start justify-between gap-3">
    <h3 class="text-sm font-semibold text-gray-900 leading-5">Name: <%= source_data_type.name.presence  || "(Not Entered)"%>
    </h3>
  </div>
  <div class="mt-2 grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-1 text-xs text-gray-700">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= source_data_type.description %>
  </div>
  <div class="mt-2 grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-1 text-xs text-gray-700">
    <strong class="block font-medium mb-1">Comments:</strong>
    <%= source_data_type.comments %>
  </div>
  <div class="mt-3 flex items-center gap-2">
    <%= link_to "Show",
                admin_source_data_type_path(source_data_type),
                class: "inline-flex items-center rounded-md px-2 py-1 text-xs font-medium text-white bg-blue-600 hover:bg-blue-500" %>
    <%= link_to "Edit",
                edit_admin_source_data_type_path(source_data_type),
                class: "inline-flex items-center rounded-md px-2 py-1 text-xs font-medium text-white bg-blue-600 hover:bg-blue-500" %>
  </div>
</div>
