<%= form_with(model: [:admin, source_data_type], class: "contents") do |form| %>
  <% if source_data_type.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(source_data_type.errors.count, "error") %> prohibited this source_data_type from being saved:</h2>

      <ul class="list-disc ml-6">
        <% source_data_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data_type.errors[:name].none?, "border-red-400 focus:outline-red-600": source_data_type.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data_type.errors[:description].none?, "border-red-400 focus:outline-red-600": source_data_type.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": source_data_type.errors[:comments].none?, "border-red-400 focus:outline-red-600": source_data_type.errors[:comments].any?}] %>
  </div>

  <%= render "admin/shared/form_actions",
             record: source_data_type,
             back_path: admin_source_data_types_path,
             submit_text: (source_data_type.persisted? ? "Update" : "Create"),
             show_text: "Show this source data type",
             back_text: "Back to source data types" %>
<% end %>
