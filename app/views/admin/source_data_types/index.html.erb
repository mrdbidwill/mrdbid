<% content_for :title, "Source data types" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Source data types</h1>

    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-gray-600 hover:bg-gray-500 text-white block font-medium" %>
    <%= link_to "New source data type", new_admin_source_data_type_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="source_data _types" class="min-w-full divide-y divide-gray-100 space-y-1">
    <% if @source_data_types.any? %>
      <% @source_data_types.each do |source_data_type| %>
        <div class="pb-2">
          <%= render source_data_type %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No source data types found.</p>
    <% end %>
  </div>
</div>
