<% content_for :title, "Editing color" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-2xl">Editing color</h1>

  <%= render "form", color: @color %>

  <%= link_to "Show this color", admin_color_path(@color), class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <%= link_to "Back to colors", admin_colors_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
</div>
