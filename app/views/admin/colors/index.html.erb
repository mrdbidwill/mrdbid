<% content_for :title, "Colors" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Colors</h1>
    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New color", new_admin_color_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="colors" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @colors.any? %>
      <% @colors.each do |color| %>
        <div class="my-4">
          <div class="bg-white border border-gray-200 rounded-xl shadow-sm p-4 flex flex-col sm:flex-row gap-5 items-center">
            <div class="flex-shrink-0">
              <img src="<%= image_path("AMS_colors/banner_50x50/banner_#{color.id}.jpg") %>" alt="<%= color.latin_name %>" class="w-24 h-24 object-cover rounded-md border border-gray-100 shadow" />
            </div>
            <div class="flex-1 w-full">
              <div class="flex flex-col sm:flex-row sm:items-center sm:gap-6 w-full">
                <div class="flex-1">
                  <div class="text-lg font-semibold text-gray-900 mb-1"><%= color.latin_name %></div>
                  <div class="text-gray-700 text-sm mb-1"><b>Common:</b> <%= color.common_name %></div>
                  <div class="text-gray-600 text-sm mb-1"><b>Hex:</b> <%= color.hex %></div>
                  <div class="text-gray-600 text-sm"><b>Group:</b> <%= color.color_group %></div>
                </div>
                <div class="mt-4 sm:mt-0 flex flex-row gap-3">
                  <%= link_to "Show", admin_color_path(color),
                      class: "inline-flex items-center justify-center h-10 min-w-[5.5rem] px-4 rounded-md bg-blue-600 hover:bg-blue-500 text-white font-medium transition-all duration-100" %>
                  <%= link_to "Edit", edit_admin_color_path(color),
                      class: "inline-flex items-center justify-center h-10 min-w-[5.5rem] px-4 rounded-md bg-blue-600 hover:bg-blue-500 text-white font-medium transition-all duration-100" %>
                  <%# button_to "Delete", admin_color_path(color), method: :delete, class: "inline-flex items-center justify-center h-10 min-w-[5.5rem] px-4 rounded-md bg-red-600 hover:bg-red-500 text-white font-medium transition-all duration-100", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No colors found.</p>
    <% end %>
  </div>
</div>
