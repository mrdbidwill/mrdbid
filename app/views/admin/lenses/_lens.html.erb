<div id="<%= dom_id lens %>" class="w-full space-y-4">
  <div class="flex flex-wrap items-baseline gap-x-6 gap-y-2">
    <div class="flex items-baseline gap-2">
      <span class="text-sm text-gray-500">Make:</span>
      <span class="text-lg text-gray-900"><%= lens.make.presence || "—" %></span>
    </div>
    <div class="flex items-baseline gap-2">
      <span class="text-sm text-gray-500">Model:</span>
      <span class="text-lg text-gray-900"><%= lens.model.presence || "—" %></span>
    </div>
  </div>

  <div>
    <div class="text-sm text-gray-500 mb-1">Description:</div>
    <div class="text-lg text-gray-900 whitespace-pre-line"><%= lens.description.to_s.presence || "—" %></div>
  </div>

  <div>
    <div class="text-sm text-gray-500 mb-1">Comments:</div>
    <div class="text-lg text-gray-900 whitespace-pre-line"><%= lens.comments.to_s.presence || "—" %></div>
  </div>
</div>

