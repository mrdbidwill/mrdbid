<% content_for :title, "Lenses" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Lenses</h1>
    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New Lens", new_admin_lens_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="lens" class="min-w-full divide-y divide-gray-200 space-y-2">
    <% if @lenses.any? %>
      <% @lenses.each do |lens| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-2 sm:pb-0">
          <%= render partial: 'admin/lenses/lens', locals: { lens: lens } %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= render "admin/shared/resource_actions", record: lens, delete: false %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No lenses found.</p>
    <% end %>
  </div>
</div>
