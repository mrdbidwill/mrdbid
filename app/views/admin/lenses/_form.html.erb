<%= form_with(model: [:admin, lens], class: "contents") do |form| %>
  <% if lens.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(lens.errors.count, "error") %> prohibited this lens from being saved:</h2>

      <ul class="list-disc ml-6">
        <% lens.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :make %>
    <%= form.text_field :make, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lens.errors[:make].none?, "border-red-400 focus:outline-red-600": lens.errors[:make].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :model %>
    <%= form.text_field :model, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lens.errors[:model].none?, "border-red-400 focus:outline-red-600": lens.errors[:model].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lens.errors[:description].none?, "border-red-400 focus:outline-red-600": lens.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lens.errors[:comments].none?, "border-red-400 focus:outline-red-600": lens.errors[:comments].any?}] %>
  </div>

  <div class="my-5">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
