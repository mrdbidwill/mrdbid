<%= form_with(model:  [:admin, display_option], class: "contents") do |form| %>
  <% if display_option.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(display_option.errors.count, "error") %> prohibited this display option from being saved:</h2>

      <ul class="list-disc ml-6">
        <% display_option.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-1">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": display_option.errors[:name].none?, "border-red-400 focus:outline-red-600": display_option.errors[:name].any?}] %>
  </div>

  <div class="my-1">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": display_option.errors[:description].none?, "border-red-400 focus:outline-red-600": display_option.errors[:description].any?}] %>
  </div>

  <div class="my-1">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": display_option.errors[:comments].none?, "border-red-400 focus:outline-red-600": display_option.errors[:comments].any?}] %>
  </div>

  <%= render "admin/shared/form_actions",
             record: display_option,
             back_path: admin_display_options_path,
             submit_text: (display_option.persisted? ? "Update" : "Create"),
             show_text: "Show this display option",
             back_text: "Back to display options" %>
<% end %>

