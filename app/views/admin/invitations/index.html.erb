<% content_for :title, "Temporary Admin Invitations" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-1 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-2xl">Temporary Admin Invitations</h1>
    <div class="flex gap-2">
      <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-gray-600 hover:bg-gray-500 text-white block font-medium" %>
      <%= link_to "New Invitation", new_admin_invitation_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  </div>

  <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6">
    <p class="text-sm">
      <strong>About Temporary Admin Invitations:</strong><br>
      Send magic links that grant instant 24-hour admin access. Recipients click the link and are immediately logged in with full admin privileges. After 24 hours, access automatically downgrades to read-only.
    </p>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sent By</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expires</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @invitation_tokens.any? %>
          <% @invitation_tokens.each do |invitation| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= invitation.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if invitation.used? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Used
                  </span>
                <% elsif invitation.expired? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                    Expired
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                    Pending
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= invitation.created_by.display_name || invitation.created_by.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(invitation.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= invitation.admin_expires_at.strftime('%b %d, %Y %l:%M %p') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <% unless invitation.used? %>
                  <%= button_to "Delete", admin_invitation_path(invitation),
                      method: :delete,
                      class: "text-red-600 hover:text-red-900",
                      data: { turbo_confirm: "Delete this invitation?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-4 text-center text-gray-500">
              No invitations found. Create one to get started.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @invitation_tokens.respond_to?(:total_pages) && @invitation_tokens.total_pages > 1 %>
    <div class="mt-6">
      <%= paginate @invitation_tokens %>
    </div>
  <% end %>
</div>
