<% content_for :title, "Storage locations" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Storage locations</h1>

    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New Storage Location", new_admin_storage_location_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="trees" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @storage_locations.any? %>
      <% @storage_locations.each do |storage_location| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render storage_location %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= render "admin/shared/resource_actions", record: storage_location, delete: false %>  <!-- show, edit, destroy (optional -->
          </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No storage locations found.</p>
    <% end %>
  </div>
</div>
