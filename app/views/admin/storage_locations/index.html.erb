<% content_for :title, "Storage locations" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Storage locations</h1>

    <div><p>app/views/storage_locations/index.html.erb</p></div>

    <%= link_to "Back to Admin Dashboard", admin_root_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New Tree", new_admin_storage_location_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="trees" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @storage_locations.any? %>
      <% @storage_locations.each do |storage_location| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render storage_location %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", admin_storage_location_path(storage_location), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
            <%= link_to "Edit", edit_admin_storage_location_path(storage_location), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
            <%#=
              <%# button_to "Delete this storage location", admin_storage_location_path(storage_location), method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
             %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No storage locations found.</p>
    <% end %>
  </div>
</div>
