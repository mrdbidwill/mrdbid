<%# locals: (mushroom_project: MushroomProject, mushrooms: ActiveRecord::Relation, projects: ActiveRecord::Relation) %>
<%= form_with(model: mushroom_project, class: "contents") do |form| %>
  <% if mushroom_project.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(mushroom_project.errors.count, "error") %> prohibited this mushroom_project from being saved:</h2>

      <ul class="list-disc ml-6">
        <% mushroom_project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :project_id, "Project" %>
    <%= form.text_field :project_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                  { "border-gray-400 focus:outline-blue-600": mushroom_project.errors[:project].none? && mushroom_project.errors[:project_id].none?,
                    "border-red-400 focus:outline-red-600": mushroom_project.errors[:project].any? || mushroom_project.errors[:project_id].any? }] %>
  </div>

  <div class="my-5">
    <%= form.label :mushroom_id, "Mushroom" %>
    <%= form.text_field :mushroom_id, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                  { "border-gray-400 focus:outline-blue-600": mushroom_project.errors[:mushroom].none? && mushroom_project.errors[:mushroom_id].none?,
                    "border-red-400 focus:outline-red-600": mushroom_project.errors[:mushroom].any? || mushroom_project.errors[:mushroom_id].any? }] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>