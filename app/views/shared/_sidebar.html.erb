  <!-- Close button for mobile -->
  <button id="sidebar-close" class="lg:hidden absolute top-4 right-4 text-gray-600 hover:text-gray-900">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Logo/Title - Clickable -->
  <div class="mb-4 mt-8 lg:mt-0">
    <%= link_to root_path, class: "block hover:opacity-80 transition" do %>
      <%= image_tag "mrdbid_logo.svg",
                    alt: "MRDBID â€” MushRoom DataBase Identification",
                    class: "block h-10 w-auto select-none mb-2",
                    draggable: false %>
      <p class="text-xs text-gray-600">MushRoom DataBase IDentification</p>
    <% end %>
  </div>

  <!-- Logged in user info -->
  <% if user_signed_in? %>
    <div class="mb-3 p-2 bg-green-50 border border-green-300 rounded text-center">
      <p class="text-xs text-green-700 mb-1">Logged in as</p>
      <p class="text-sm font-semibold text-green-900"><%= current_user.display_name %></p>
    </div>
  <% end %>

  <!-- Home Button -->
  <div class="mb-6">
    <%= link_to "Home", root_path, class: "block px-3 py-2 rounded bg-green-600 hover:bg-green-700 text-white text-sm font-medium transition text-center" %>
  </div>

  <!-- Context-aware section for the current mushroom -->
  <% if defined?(@mushroom) && @mushroom.present? && @mushroom.persisted? %>
    <div class="mb-4 p-3 bg-blue-50 lg:bg-blue-100 border border-blue-300 rounded">
      <div class="text-xs font-semibold text-blue-900 mb-2">Current Mushroom:</div>
      <div class="text-sm font-medium text-blue-800 mb-3"><%= @mushroom.name || "Unnamed" %></div>

      <div class="space-y-1">
        <!-- Edit/View toggle -->
        <% if current_page?(controller: 'mushrooms', action: 'show', id: @mushroom.id) %>
          <%= link_to "Edit - Add Characters", edit_mushroom_path(@mushroom), class: "block px-2 py-1.5 text-xs rounded bg-green-600 hover:bg-green-700 text-white font-medium transition text-center" %>
        <% elsif current_page?(controller: 'mushrooms', action: 'edit', id: @mushroom.id) %>
          <%= link_to "View Mushroom", mushroom_path(@mushroom), class: "block px-2 py-1.5 text-xs rounded bg-blue-600 hover:bg-blue-700 text-white font-medium transition text-center" %>
        <% end %>

        <!-- Upload Image -->
        <%= link_to "Upload Image", new_mushroom_image_mushroom_path(@mushroom), class: "block px-2 py-1.5 text-xs rounded bg-sky-600 hover:bg-sky-700 text-white font-medium transition text-center" %>

        <!-- Compare -->
        <%= link_to "Compare", mushroom_mushroom_comparisons_path(mushroom_id: @mushroom.id), class: "block px-2 py-1.5 text-xs rounded bg-purple-600 hover:bg-purple-700 text-white font-medium transition text-center" %>

        <!-- Delete -->
        <% if user_signed_in? && @mushroom.user_id == current_user.id %>
          <%= button_to "Delete Mushroom", mushroom_path(@mushroom), method: :delete,
              class: "w-full px-2 py-1.5 text-xs rounded bg-red-600 hover:bg-red-700 text-white font-medium transition text-center",
              data: { turbo_confirm: "Are you sure you want to delete this mushroom?" } %>
        <% end %>
      </div>
    </div>

    <hr class="my-4 border-gray-300">
  <% end %>

  <!-- Navigation Links -->
  <nav class="space-y-1">
    <% if user_signed_in? %>
      <!-- Mushrooms -->
      <%= link_to "Your Mushrooms", mushrooms_path, class: "block px-3 py-2 rounded bg-green-600 hover:bg-green-700 text-white text-sm font-medium transition" %>

      <%= link_to "Add New Mushroom", new_mushroom_path, class: "block px-3 py-2 rounded bg-green-600 hover:bg-green-700 text-white text-sm font-medium transition" %>

      <%= link_to "ðŸ” Search Mushrooms", mushroom_search_index_path, class: "block px-3 py-2 rounded bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium transition" %>

      <!-- Export All -->
      <%= link_to "ðŸ“„ Export All to PDF", export_all_pdf_mushrooms_path(format: :pdf),
          class: "block px-3 py-2 rounded bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium transition",
          id: "export-all-pdf-link",
          data: {
            turbo_confirm: "This will export all of your mushrooms to PDF. Large exports may take some time. Continue?",
            turbo: false
          } %>

      <div class="my-2 border-t border-gray-400"></div>

      <!-- Articles -->
      <%= link_to "Articles", articles_path, class: "block px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium transition" %>

      <!-- Books -->
      <%= link_to "Books", books_path, class: "block px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium transition" %>

      <!-- Contact -->
      <%= link_to "Contact", contact_path, class: "block px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium transition" %>

      <div class="my-2 border-t border-gray-400"></div>

      <% if current_user&.admin? %>
        <!-- Admin -->
        <%= link_to "Admin Dashboard", admin_root_path, class: "block px-3 py-2 rounded bg-red-600 hover:bg-red-700 text-white text-sm font-medium transition" %>

        <%= link_to "Characters", admin_mr_characters_path, class: "block px-3 py-2 rounded bg-red-600 hover:bg-red-700 text-white text-sm font-medium transition" %>

        <%= link_to "Guest Invitations", admin_invitations_path, class: "block px-3 py-2 rounded bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium transition" %>

        <div class="my-2 border-t border-gray-400"></div>
      <% end %>

      <!-- Account -->
      <%= link_to "Account", edit_user_registration_path, class: "block px-3 py-2 rounded bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium transition" %>

      <!-- Logout -->
      <%= button_to "Logout", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left px-3 py-2 rounded bg-yellow-600 hover:bg-yellow-700 text-white text-sm font-medium transition" %>
    <% else %>
      <!-- Not signed in -->
      <%= link_to "Books", books_path, class: "block px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium transition" %>

      <%= link_to "Contact", contact_path, class: "block px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium transition" %>

      <%= link_to "Sign In", new_user_session_path, class: "block px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium transition" %>

      <%= link_to "Create Account", new_user_registration_path, class: "block px-3 py-2 rounded bg-green-600 hover:bg-green-700 text-white text-sm font-medium transition" %>

      <!-- Demo Mode Info -->
      <div class="mt-6 p-3 bg-blue-50 border border-blue-200 rounded text-xs">
        <p class="font-semibold text-blue-900 mb-2">ðŸ‘‹ Demo Mode</p>
        <p class="text-blue-800 mb-2">You're viewing demonstration mushroom specimens.</p>
        <p class="text-blue-700">Sign in to add your own collection and use the full feature set.</p>
      </div>
    <% end %>
  </nav>
</aside>

<!-- JavaScript for sidebar toggle -->
<script>
  function initializeSidebar() {
    const sidebar = document.getElementById('sidebar');
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const sidebarClose = document.getElementById('sidebar-close');
    const sidebarOverlay = document.getElementById('sidebar-overlay');

    function openSidebar() {
      sidebar.classList.remove('-translate-x-full');
      sidebarOverlay.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeSidebar() {
      sidebar.classList.add('-translate-x-full');
      sidebarOverlay.classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Remove old listeners if they exist to prevent duplicates
    sidebarToggle.replaceWith(sidebarToggle.cloneNode(true));
    sidebarClose.replaceWith(sidebarClose.cloneNode(true));
    sidebarOverlay.replaceWith(sidebarOverlay.cloneNode(true));

    // Get fresh references after cloning
    const newSidebarToggle = document.getElementById('sidebar-toggle');
    const newSidebarClose = document.getElementById('sidebar-close');
    const newSidebarOverlay = document.getElementById('sidebar-overlay');

    newSidebarToggle.addEventListener('click', openSidebar);
    newSidebarClose.addEventListener('click', closeSidebar);
    newSidebarOverlay.addEventListener('click', closeSidebar);

    // Close sidebar when clicking a link on mobile
    const sidebarLinks = document.getElementById('sidebar').querySelectorAll('a, button[type="submit"]');
    sidebarLinks.forEach(link => {
      link.addEventListener('click', function() {
        if (window.innerWidth < 1024) {
          closeSidebar();
        }
      });
    });

    // Ensure sidebar is closed on mobile after navigation
    closeSidebar();

    // Handle PDF export with loading indicator
    const exportPdfLink = document.getElementById('export-all-pdf-link');
    if (exportPdfLink) {
      exportPdfLink.addEventListener('click', function(e) {
        // Only show loading if user confirms (if confirm dialog exists)
        const confirmMessage = this.dataset.turboConfirm;
        if (confirmMessage) {
          if (!confirm(confirmMessage)) {
            e.preventDefault();
            return;
          }
        }

        // Show loading overlay
        const loadingOverlay = document.createElement('div');
        loadingOverlay.id = 'pdf-loading-overlay';
        loadingOverlay.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50';
        loadingOverlay.innerHTML = `
          <div class="bg-white rounded-lg p-8 max-w-md mx-4 text-center">
            <div class="mb-4">
              <svg class="animate-spin h-16 w-16 text-indigo-600 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Generating PDF...</h3>
            <p class="text-gray-600 mb-4">Please wait while we export your mushrooms to PDF. This may take a minute or two depending on the number of mushrooms.</p>
            <p class="text-sm text-gray-500">Do not close this window or navigate away.</p>
          </div>
        `;
        document.body.appendChild(loadingOverlay);

        // Change button text
        const originalButtonContent = this.innerHTML;
        this.innerHTML = 'â³ Exporting...';
        this.classList.remove('hover:bg-indigo-700');
        this.classList.add('opacity-75', 'cursor-not-allowed');
        this.style.pointerEvents = 'none';

        // Detect when download completes by checking window focus
        let focusCheckCount = 0;
        const downloadCheckInterval = setInterval(function() {
          focusCheckCount++;
          // Check if window has regained focus (happens when download dialog closes)
          if (document.hasFocus() && focusCheckCount > 5) { // Wait at least 5 checks (1.5 sec) before considering focus
            clearInterval(downloadCheckInterval);
            // Give it a moment for the download to complete, then remove overlay
            setTimeout(function() {
              const overlay = document.getElementById('pdf-loading-overlay');
              if (overlay) {
                overlay.remove();
              }
              // Reset button
              if (exportPdfLink) {
                exportPdfLink.innerHTML = originalButtonContent;
                exportPdfLink.classList.add('hover:bg-indigo-700');
                exportPdfLink.classList.remove('opacity-75', 'cursor-not-allowed');
                exportPdfLink.style.pointerEvents = '';
              }
            }, 1000); // 1 second delay after focus returns
          }

          // Stop checking after 100 attempts (30 seconds)
          if (focusCheckCount > 100) {
            clearInterval(downloadCheckInterval);
            const overlay = document.getElementById('pdf-loading-overlay');
            if (overlay) {
              overlay.remove();
            }
            if (exportPdfLink) {
              exportPdfLink.innerHTML = originalButtonContent;
              exportPdfLink.classList.add('hover:bg-indigo-700');
              exportPdfLink.classList.remove('opacity-75', 'cursor-not-allowed');
              exportPdfLink.style.pointerEvents = '';
            }
          }
        }, 300); // Check every 300ms
      });
    }
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initializeSidebar);

  // Re-initialize on Turbo navigation
  document.addEventListener('turbo:load', initializeSidebar);

  // Also reset sidebar state before Turbo caches the page
  document.addEventListener('turbo:before-cache', function() {
    const sidebar = document.getElementById('sidebar');
    const sidebarOverlay = document.getElementById('sidebar-overlay');
    if (sidebar && sidebarOverlay) {
      sidebar.classList.add('-translate-x-full');
      sidebarOverlay.classList.add('hidden');
      document.body.style.overflow = '';
    }
  });
</script>
