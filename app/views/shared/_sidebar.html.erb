        <button type="button"
                onclick="this.nextElementSibling.classList.toggle('hidden')"
                class="w-full text-left px-3 py-2 rounded bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium transition flex items-center justify-between">
          <span>üõ†Ô∏è Tools</span>
          <span class="text-xs">‚ñº</span>
        </button>
        <div class="hidden mt-1 space-y-1 pl-2">
          <%= link_to "üìÑ Export All to PDF", export_all_pdf_mushrooms_path(format: :pdf),
              class: "block px-3 py-2 rounded bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-medium transition",
              id: "export-all-pdf-link",
              data: {
                turbo_confirm: "This will export all of your mushrooms to PDF. Large exports may take some time. Continue?",
                turbo: false
              } %>
          <%= link_to "üíæ Backup My Images", new_users_image_export_path,
              class: "block px-3 py-2 rounded bg-purple-600 hover:bg-purple-700 text-white text-xs font-medium transition" %>
          <%= link_to "üìÅ Organize Specimens", tools_path,
              class: "block px-3 py-2 rounded bg-gray-600 hover:bg-gray-700 text-white text-xs font-medium transition" %>
          <%= link_to "üîç iNaturalist Fields", inaturalist_observation_fields_path,
              class: "block px-3 py-2 rounded bg-green-600 hover:bg-green-700 text-white text-xs font-medium transition" %>
        </div>
      </div>

      <div class="my-2 border-t border-gray-400"></div>

      <!-- Articles -->
      <%= link_to "Articles", articles_path, class: "block px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium transition" %>

