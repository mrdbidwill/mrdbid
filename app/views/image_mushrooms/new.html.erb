<% content_for :title, "New mushroom image" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-2xl">New mushroom image</h1>
  <%= render "form",
             image_mushroom: @image_mushroom,
             mushroom: @mushroom,
             parts: @parts %>

  <div class="mt-4 flex flex-wrap gap-2">
    <%= link_to "Back to Character Grid", edit_mushroom_path(@mushroom),
        class: "inline-flex items-center gap-2 px-4 py-2 rounded-md bg-indigo-600 hover:bg-indigo-700 text-white font-medium transition" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      <span>Back to Character Grid</span>
    <% end %>
    <%= link_to "Back to mushrooms", mushrooms_path, class: "btn-primary btn-responsive" %>
  </div>
</div>

