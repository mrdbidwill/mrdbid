<h1>Edit Image for <%= @image_mushroom.mushroom&.name || 'Unknown' %></h1>

<!-- Info Banner -->
<div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-4">
  <p class="text-sm text-gray-800">
    <strong>ℹ️ Note:</strong> You can only edit the <strong>Mushroom Part</strong> on this page.
    EXIF data (camera, dimensions, exposure, etc.) is automatically extracted from the image file and cannot be manually edited.
  </p>
</div>

<% if @image_mushroom.errors.any? %>
  <div class="errors">
    <h2><%= pluralize(@image_mushroom.errors.count, "error") %> prohibited the image from being saved:</h2>
    <ul>
      <% @image_mushroom.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @image_mushroom, url: image_mushroom_path(@image_mushroom), method: :patch, local: true) do |form| %>
  <!-- Image File -->
  <div class="field">
    <%= form.label :image_file, "Select an Image File" %>
    <%= form.file_field :image_file %>
  </div>

  <!-- Image Name -->
  <div class="field">
    <%= form.label :image_name, "Image Name" %>
    <%= form.text_field :image_name %>
  </div>

  <!-- Part Dropdown -->
  <div class="field">
    <%= form.label :part_id, "Part" %>
    <%= form.collection_select(:part_id, @parts, :id, :name, { selected: @image_mushroom.part_id, prompt: "Select a Part" }) %>
  </div>

  <%= form.submit "Update Image", class: "btn btn-primary" %>
<% end %>
