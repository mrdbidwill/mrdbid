<% content_for :title, "Edit Image Part" %>

<div class="w-full max-w-3xl mx-auto p-4">
  <h1 class="font-bold text-2xl mb-4">Edit Image for <%= @image_mushroom.mushroom&.name || 'Unknown' %></h1>

  <!-- Info Banner -->
  <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-4">
    <p class="text-sm text-gray-800">
      <strong>ℹ️ Note:</strong> You can only edit the <strong>Mushroom Part</strong> on this page.
      EXIF data (camera, dimensions, exposure, etc.) is automatically extracted from the image file and cannot be manually edited.
    </p>
  </div>

  <% if @image_mushroom.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-4">
      <h2 class="font-semibold text-red-800 mb-2"><%= pluralize(@image_mushroom.errors.count, "error") %> prohibited the image from being saved:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% @image_mushroom.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @image_mushroom, url: image_mushroom_path(@image_mushroom), method: :patch, local: true, class: "bg-white border rounded-lg p-6") do |form| %>
    <!-- Show current image as preview -->
    <% if @image_mushroom.image_file.attached? %>
      <div class="mb-5">
        <label class="block font-medium text-gray-700 mb-2">Current Image</label>
        <div class="border rounded-md p-4 bg-gray-50 inline-block">
          <%= image_tag @image_mushroom.image_file.variant(resize_to_limit: [300, 300]),
                        class: "max-w-xs rounded shadow",
                        alt: @image_mushroom.image_name.presence || "Current image" %>
          <% if @image_mushroom.image_name.present? %>
            <p class="text-sm text-gray-600 mt-2"><strong>Name:</strong> <%= @image_mushroom.image_name %></p>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Part Dropdown -->
    <div class="mb-5">
      <%= form.label :part_id, "Mushroom Part (editable)", class: "block font-medium text-gray-700 mb-2" %>
      <%= form.collection_select(:part_id, @parts, :id, :name,
                                 { selected: @image_mushroom.part_id, prompt: "Select a Part" },
                                 class: "block shadow-sm rounded-md border border-gray-400 px-3 py-2 w-full focus:outline-blue-600") %>
      <p class="text-xs text-gray-600 mt-1">Select which part of the mushroom this image shows (cap, stem, gills, etc.)</p>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-3">
      <%= form.submit "Update Part", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-medium" %>

      <%= link_to "Cancel",
                  image_mushroom_path(@image_mushroom),
                  class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded font-medium inline-block" %>
    </div>
  <% end %>

  <!-- Additional Navigation -->
  <div class="mt-6 pt-4 border-t">
    <p class="text-sm text-gray-600 mb-2">Other options:</p>
    <div class="flex flex-wrap gap-3">
      <%= link_to "← Back to Mushroom",
                  mushroom_path(@image_mushroom.mushroom),
                  class: "text-blue-600 hover:underline text-sm" %>

      <%= link_to "View Full Size Image",
                  image_mushroom_path(@image_mushroom),
                  class: "text-blue-600 hover:underline text-sm" %>
    </div>
  </div>
</div>
