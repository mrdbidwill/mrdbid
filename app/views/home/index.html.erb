<div class="flex flex-col items-center justify-center min-h-screen">
  <h1 class="text-4xl font-bold mb-6">Welcome to MRDBID</h1>
  <p class="text-xl mb-8">Mushroom Research Database for Identification</p>

  <div class="flex gap-4">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", root_path, class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
    <% end %>
  </div>
</div>
