<%# locals: (all_group_mushroom: AllGroupMushroom, all_groups: ActiveRecord::Relation, mushrooms: ActiveRecord::Relation) %>

<%= form_with(model: all_group_mushroom, class: "contents") do |form| %>
  <% if all_group_mushroom.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-2 py-1 font-medium rounded-md mt-3">
      <h2><%= pluralize(all_group_mushroom.errors.count, "error") %> prohibited this mushroom group from being saved:</h2>

      <ul class="list-disc ml-6">
        <% all_group_mushroom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :all_group_id, "Group" %>
    <%= form.text_field :all_group_id, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full",
                  { "border-gray-400 focus:outline-blue-600": all_group_mushroom.errors[:all_group].none? && all_group_mushroom.errors[:all_group_id].none?,
                    "border-red-400 focus:outline-red-600": all_group_mushroom.errors[:all_group].any? || all_group_mushroom.errors[:all_group_id].any? }] %>
  </div>

  <div class="my-5">
    <%= form.label :mushroom_id, "Mushroom" %>
    <%= form.text_field :mushroom_id, rows: 4, class: ["block shadow-sm rounded-md border px-2 py-1 mt-2 w-full",
                  { "border-gray-400 focus:outline-blue-600": all_group_mushroom.errors[:mushroom].none? && all_group_mushroom.errors[:mushroom_id].none?,
                    "border-red-400 focus:outline-red-600": all_group_mushroom.errors[:mushroom].any? || all_group_mushroom.errors[:mushroom_id].any? }] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>