<h1 class="text-xl font-semibold mb-4">Add Mushroom to Group</h1>

<% if @mushroom %>
  <div class="mb-3 p-2 bg-gray-50">
    Adding for mushroom: <span class="font-semibold"><%= @mushroom.name %></span>
  </div>
<% end %>

<%= render "form",
           all_group_mushroom: @all_group_mushroom,
           all_groups: (@all_groups || []),
           mushrooms: [@mushroom].compact %>

<div class="mt-4">
  <%= link_to "Back to mushrooms", mushrooms_path, class: "rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
</div>
