<% content_for :title, "Export Status" %>

<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "â† Back", :back, class: "text-blue-600 hover:text-blue-900" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <h1 class="text-2xl font-bold text-gray-900">Image Export Status</h1>
    </div>

    <div class="px-6 py-6 space-y-4">
      <% if @export_info[:status] == 'processing' %>
        <!-- Processing Status -->
        <div class="text-center py-8">
          <svg class="animate-spin h-12 w-12 mx-auto text-blue-600 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Processing Your Export</h2>
          <p class="text-gray-600 mb-4">
            We're gathering your images and creating the ZIP file. This may take several minutes.
          </p>
          <p class="text-sm text-gray-500">
            Started: <%= @export_info[:created_at].strftime('%B %d, %Y at %I:%M %p') %>
          </p>
        </div>

        <!-- Auto-refresh script -->
        <script>
          // Refresh page every 10 seconds to check status
          setTimeout(function() {
            window.location.reload();
          }, 10000);
        </script>

      <% elsif @export_info[:status] == 'ready' %>
        <!-- Ready Status -->
        <div class="text-center py-8">
          <svg class="h-12 w-12 mx-auto text-green-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Export Ready!</h2>
          <p class="text-gray-600 mb-4">
            Your image export is ready for download.
          </p>
          <p class="text-sm text-gray-500 mb-6">
            File Size: <%= number_to_human_size(@export_info[:file_size]) %><br>
            Created: <%= @export_info[:created_at].strftime('%B %d, %Y at %I:%M %p') %><br>
            Expires: <%= (@export_info[:created_at] + 24.hours).strftime('%B %d, %Y at %I:%M %p') %>
          </p>

          <%= link_to "Download ZIP File",
                      users_image_export_download_path(id: @export_id),
                      class: "inline-block btn-primary px-6 py-3 text-lg" %>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-6">
          <h3 class="font-semibold text-blue-900 mb-2">What's in the ZIP file?</h3>
          <ul class="list-disc list-inside text-sm text-blue-800 space-y-1">
            <li><strong>images/</strong> - All your mushroom photos</li>
            <li><strong>manifest.csv</strong> - Spreadsheet with all metadata</li>
            <li><strong>README.txt</strong> - Information about the export</li>
          </ul>
        </div>

      <% elsif @export_info[:status] == 'failed' %>
        <!-- Failed Status -->
        <div class="text-center py-8">
          <svg class="h-12 w-12 mx-auto text-red-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Export Failed</h2>
          <p class="text-gray-600 mb-4">
            Unfortunately, there was an error creating your export.
          </p>
          <% if @export_info[:error].present? %>
            <p class="text-sm text-gray-500 mb-6">
              Error: <%= @export_info[:error] %>
            </p>
          <% end %>

          <%= link_to "Try Again", new_users_image_export_path, class: "inline-block btn-primary px-6 py-3" %>
          <%= link_to "Contact Support", contact_path, class: "inline-block btn ml-4 px-6 py-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
