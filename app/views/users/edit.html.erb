<div class="md:w-2/3 w-full mx-auto">
  <h1 class="font-bold text-2xl mb-5">Edit User</h1>

  <%= form_with(model: @user, url: admin_user_path(@user), local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mb-3">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul class="list-disc ml-6">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :email %>
      <%= form.email_field :email, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :permission_id %>
      <%= form.collection_select :permission_id, Permission.all, :id, :name, {}, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="actions">
      <%= form.submit "Update User", class: "rounded-md px-3 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    </div>
  <% end %>

  <%= link_to "Back", admin_users_path, class: "mt-3 inline-block rounded-md px-3 py-2 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
</div>
