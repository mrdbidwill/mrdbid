<% content_for :title, "Clusters" %>

<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="title-xl">Clusters</h1>
    <%= link_to "New cluster", new_cluster_path, class: "btn-primary" %>
  </div>

  <% if params[:mushroom_id].present? %>
    <% mushroom = Mushroom.find_by(id: params[:mushroom_id]) %>
    <% if mushroom %>
      <div class="my-4 p-4 bg-blue-50 border border-blue-300 rounded">
        <p class="text-sm font-semibold text-blue-900 mb-2">
          Adding mushroom "<%= mushroom.name || "Unnamed" %>" to a cluster
        </p>
        <p class="text-xs text-blue-700">Click "Add to This Cluster" button next to the cluster you want to add this mushroom to.</p>
      </div>
    <% end %>
  <% end %>

  <div id="clusters" class="stack-list">
    <p class="p-mrdbid">You create <b>your</b> clusters to use however you see fit. The goal is to help you organize your mushrooms and make it easier to find the ones you want.</p>
    <p class="p-mrdbid">The original thought is these mushroom specimens may end up being the same genus once the identification process is completed?</p>
    <% if @clusters.any? %>
      <% @clusters.each do |cluster| %>
        <div class="stack-row">
          <%= render cluster %>
          <%= render "shared/page_actions",
                     right: (
                       (
                         (params[:mushroom_id].present? && Mushroom.exists?(params[:mushroom_id]) ?
                           link_to("Add to This Cluster", cluster_mushrooms_path(cluster_id: cluster.id, mushroom_id: params[:mushroom_id]), method: :post, class: "btn-primary", data: { turbo_confirm: "Add this mushroom to #{cluster.name}?" }) : "") +
                           link_to("Edit", edit_cluster_path(cluster), class: "btn-primary") +
                           button_to("Delete", cluster_path(cluster), method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure?" })
                       ).html_safe
                     )
          %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No clusters found.</p>
    <% end %>
  </div>
</div>
